<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="timeline_style">
    <attr format="color|reference" name="marker"/>
    <attr format="color|reference" name="line"/>
    <attr format="dimension" name="marker_size"/>
    <attr format="dimension" name="line_size"/>
  </declare-styleable>

  <declare-styleable name="SwipeStringSelector">
    <attr format="reference" name="swipe_leftButtonResource"/>
    <attr format="reference" name="swipe_rightButtonResource"/>
    <attr format="reference" name="swipe_titleTextAppearance"/>
    <attr format="reference" name="swipe_descriptionTextAppearance"/>

    <attr format="enum" name="swipe_descriptionGravity">
      <enum name="left" value="0"/>
      <enum name="center" value="1"/>
      <enum name="right" value="2"/>
    </attr>
  </declare-styleable>

  <attr format="reference" name="highContrastTextColor"/>
  <attr format="reference" name="mediumContrastTextColor"/>
  <attr format="reference" name="lowContrastTextColor"/>

</resources>