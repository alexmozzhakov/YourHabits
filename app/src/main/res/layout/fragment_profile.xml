<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/constraintLayout3"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:layout_marginTop="?android:attr/actionBarSize"
                                             android:fitsSystemWindows="true"
                                             android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:paddingBottom="60dp"
        android:scaleType="center"
        android:src="@drawable/ic_add_avatar"
        tools:ignore="ContentDescription"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        app:layout_constraintBottom_toTopOf="@+id/location"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#bfffffff"
        android:textIsSelectable="true"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#ccc"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_white_24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>


    <ImageView
        android:id="@+id/ivContactItem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_email_blue_24dp"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="@+id/userInfo"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Connect with facebook button -->
    <Button
        android:id="@+id/btn_connect_facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/facebook"
        android:drawableLeft="@drawable/ic_facebook_icon"
        android:drawablePadding="-32dp"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:paddingLeft="16dp"
        android:paddingTop="14dp"
        android:text="@string/connect_with_facebook"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:ignore="RtlSymmetry"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete_user"/>

    <!-- Delete user Button -->
    <Button
        android:id="@+id/btn_delete_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:text="@string/delete_user"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout3"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.62"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivContactItem3"
        android:layout_toRightOf="@id/ivContactItem3"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:paddingEnd="44dp"
        android:paddingLeft="44dp"
        android:paddingRight="44dp"
        android:paddingStart="44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#212121"
        android:textIsSelectable="true"
        app:layout_constraintLeft_toLeftOf="@+id/userInfo"
        app:layout_constraintTop_toTopOf="@+id/userInfo"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/userInfo"/>

    <FrameLayout
        android:id="@+id/userInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        tools:showIn="@layout/fragment_profile"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        app:layout_constraintBottom_toTopOf="@+id/btn_connect_facebook"
        android:layout_marginBottom="8dp"/>

</android.support.constraint.ConstraintLayout>
